<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/delete_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to do this?"/>

    <Button
        android:id="@+id/btn_cancel_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delete_user"
        android:text="Cancel"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id="@+id/btn_yes_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_below="@+id/delete_user"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_cancel_del"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="" />
</RelativeLayout>